</script>
<script>    

    function select()
    {
        var selected = $('#dg').datagrid('getSelected');
        if (!selected)
        {
            msgBox('请选择一项数据');
            return;
        }

        closeWindow(selected);
    }

    function doSearch(value, name) {
        $('#dg').datagrid('load', {
            EntityFullName: value
        });
    }
</script>

