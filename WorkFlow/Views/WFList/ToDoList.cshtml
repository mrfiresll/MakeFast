<table id="dg" class="easyui-datagrid" rownumbers="true" fit="true" pagination="true" fitcolumns="false" striped="true" border="false" idfield="Id"
       url="getlist" autorowheight="false" singleselect="true" toolbar="#tb">
    <thead>
        <tr>
            <th data-options="field:'ck',checkbox:true"></th>
            <th field="CurrentStepName" width="200" halign='center'>
                任务名称
            </th>
            <th field="DefName" width="250" halign='center'>
                流程名称
            </th>
